# ğŸ¹ Use Go 1.24+ for Cosmos SDK
FROM golang:1.24-alpine AS builder

# ğŸ“¦ Install essential build tools
RUN apk add --no-cache git make bash

# ğŸ“ Set working directory
WORKDIR /chain-rice

# ğŸ§  Copy go.mod and go.sum first to cache dependencies
COPY go.mod go.sum ./

# â¬‡ï¸ Download dependencies
RUN go mod download

# ğŸ“¦ Copy source code
COPY . .

# ğŸ”¨ Build the blockchain binary
ENV GO111MODULE=on
RUN make install

# ğŸ§ Final runtime image
FROM alpine:latest

# ğŸ“œ Add CA certificates (for secure HTTP)
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# ğŸšš Copy built binary from builder stage
COPY --from=builder /go/bin/chainrice /usr/local/bin/chainrice

# ğŸšª Expose blockchain ports
EXPOSE 26656 26657 26658 1317 9090 9091

# ğŸš€ Run the node
# Copy the start script
COPY scripts/start-blockchain.sh /start-blockchain.sh
RUN chmod +x /start-blockchain.sh

# Use sh to run the script (Alpine uses sh, not bash)
ENTRYPOINT ["/bin/sh", "/start-blockchain.sh"]
