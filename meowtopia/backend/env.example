# Meowtopia ERP System Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Database Configuration (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=cat_house_cafe
POSTGRES_USER=cat_cafe_user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Database Security Settings
DB_SSL_MODE=require
DB_SSL_CERT=
DB_SSL_KEY=
DB_SSL_CA=

# Database Performance Settings
DB_ECHO=false
DB_ECHO_POOL=false

# Database Backup Settings
DB_BACKUP_ENABLED=true
DB_BACKUP_RETENTION_DAYS=30

# Security Settings
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Session Settings
SESSION_TIMEOUT_MINUTES=480
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Encryption Settings
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true
SMTP_SSL=false

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External API Keys (if needed)
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Business Settings
BUSINESS_NAME="Cat House Caf√©"
BUSINESS_ADDRESS="123 Cat Street, Meow City, MC 12345"
BUSINESS_PHONE="+1-555-CAT-CAFE"
BUSINESS_EMAIL="info@cathousecafe.com"
BUSINESS_WEBSITE="https://cathousecafe.com"

# Tax Settings
TAX_RATE=0.08  # 8% tax rate
CURRENCY=PLN

# Operating Hours
OPENING_TIME=08:00
CLOSING_TIME=22:00
DAYS_OPEN=monday,tuesday,wednesday,thursday,friday,saturday,sunday

# Cat Care Settings
MAX_CATS_IN_CAFE=15
CAT_FEEDING_SCHEDULE=08:00,12:00,18:00
VET_CHECK_INTERVAL_DAYS=30

# Reservation Settings
MAX_RESERVATION_PARTY_SIZE=20
RESERVATION_DURATION_MINUTES=120
ADVANCE_BOOKING_DAYS=30

# Inventory Settings
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5
AUTO_REORDER_ENABLED=true

# Payment Settings
PAYMENT_METHODS=cash,card,mobile,crypto
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
PUSH_NOTIFICATIONS_ENABLED=true

# Backup and Recovery
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true

# Development Settings (only for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=localhost,127.0.0.1

